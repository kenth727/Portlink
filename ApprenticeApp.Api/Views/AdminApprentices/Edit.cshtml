@model ApprenticeApp.Api.Models.Admin.ApprenticeFormModel
@{
    Layout = null;
    var apprenticeId = ViewBag.ApprenticeId as int? ?? 0;
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/admin.css" />
    <title>Edit Apprentice</title>
</head>
<body>
<section class="page">
    <div class="hero">
        <div>
            <p class="eyebrow">Apprentice Program</p>
            <h1>Edit Apprentice</h1>
            <p class="muted">Update details or remove this apprentice.</p>
        </div>
    </div>
    <div class="card form-card">
        <form method="post" class="form">
            <div class="field">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="validation"></span>
            </div>
            <div class="field">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" />
                <span asp-validation-for="LastName" class="validation"></span>
            </div>
            <div class="field">
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email" class="validation"></span>
            </div>
            <div class="field">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" />
                <span asp-validation-for="StartDate" class="validation"></span>
            </div>
            <div class="field">
                <label asp-for="Track"></label>
                <select asp-for="Track" asp-items="Html.GetEnumSelectList<ApprenticeApp.Core.Entities.ApprenticeTrack>()"></select>
                <span asp-validation-for="Track" class="validation"></span>
            </div>
            <div class="field">
                <label asp-for="Status"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<ApprenticeApp.Core.Entities.ApprenticeStatus>()"></select>
                <span asp-validation-for="Status" class="validation"></span>
            </div>

            <div class="actions-inline">
                <button type="submit" class="button" style="border: none;">Save</button>
                <a class="button" style="background: rgba(255,255,255,0.08); color: #e9eef7;" asp-action="Index">Cancel</a>
            </div>
        </form>

        <form method="post" asp-action="Delete" asp-route-id="@apprenticeId" class="danger">
            <p>Deleting an apprentice will also remove their assignments.</p>
            <button type="submit" onclick="return confirm('Delete this apprentice and their assignments?');">Delete Apprentice</button>
        </form>
    </div>
</section>
</body>
</html>
